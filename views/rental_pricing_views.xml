<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rental_pricing_tree" model="ir.ui.view">
        <field name="name">rental.pricing.tree</field>
        <field name="model">rental.pricing</field>
        <field name="arch" type="xml">
            <list string="Tarification" editable="bottom">
                <field name="category_id"/>
                <field name="duration_type"/>
                <field name="price"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_rental_pricing_form" model="ir.ui.view">
        <field name="name">rental.pricing.form</field>
        <field name="model">rental.pricing</field>
        <field name="arch" type="xml">
            <form string="Tarif de location">
                <sheet>
                    <group>
                        <field name="category_id"/>
                        <field name="duration_type"/>
                        <field name="price"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rental_pricing" model="ir.actions.act_window">
        <field name="name">Tarification</field>
        <field name="res_model">rental.pricing</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>